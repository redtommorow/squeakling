<script type="text.js">
var calculate= function(){
    var aVal = prompt("What is the length of A?");
    var bVal = prompt("What is the length of B?");
    document.getElementById('A1').innerHTML= aVal;
    document.getElementById('B1').innerHTML= bVal;
    var aSquared = aVal * aVal;
    var bSquared = bVal * bVal;
    var total1 = aSquared + bSquared;
    var totalSquared = Math.sqrt(total1);
    document.getElementById('total').innerHTML= totalSquared;
    }
</script>




